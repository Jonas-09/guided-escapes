<div class="container mt-4 mb-4">
  <div class="d-flex justify-content-center">
    <div class="header-item mx-3">Hikings</div>
    <div class="header-item mx-3">Shoppings</div>
    <div class="header-item mx-3">Cultural</div>
    <div class="header-item mx-3">Foods</div>
  </div>
</div>

<div class="cards-container">
  <div class="cards-container">
  <% @experiences.each do |experience| %>
  <div class="card-experience">
    <div class="image-container">
      <% if experience.photo.attached? %>
        <%= cl_image_tag experience.photo.key, class: 'card-image' %>
      <% else %>
        <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU', class: 'card-image' %>
      <% end %>
    </div>
    <div class="card-content">
      <h5 class="card-title"><%= experience.title %></h5>
      <p class="card-text-details"><%= experience.content %></p>
      <p class="hosted-by"><%= experience.user.first_name %></p>
      <p class="price"><%= experience.price.round %> USD</p>
    </div>
      <%= link_to '', experience_path(experience), class: 'card-experience-link' %>
  </div>
  <% end %>
  </div>
  <%# adding map %>

  <button type="button" class="map-button mb-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Explore Map <i class="fa-regular fa-map"></i>
  </button>

<!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Explore Map <i class="fa-regular fa-map"></i></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "map", locals: {markers: @markers}, class:"map-size" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
