<div class="container">
  <div class="centered-title">
    <h1 class="primary-text-color">Create your experience on Guided Experiences</h1>
    <h2>Share your favorite local Experiences and host likeminded people from all around the globe</h2>
  </div>
  <div class="themed-form">
    <%= simple_form_for @experience do |f| %>
      <%= f.input :location %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :duration %>
      <%= f.input :price %>
      <%= f.input :photos, as: :file, input_html: {multiple: true } %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
